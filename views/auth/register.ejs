<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Modern</title>
    <style>
      body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f0f2f5;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .register-container {
        margin: 20px;
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 450px;
      }

      .register-container h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #333;
      }

      .form-control {
        width: 100%;
        padding: 12px 15px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
      }

      .form-control:focus {
        border-color: #6b73ff;
        box-shadow: 0 0 8px rgba(107, 115, 255, 0.3);
        outline: none;
      }

      .dob-group {
        margin-bottom: 20px;
      }

      .dob-group label {
        font-size: 14px;
        font-weight: 600;
        display: block;
        margin-bottom: 8px;
      }

      .dob-selects {
        display: flex;
        gap: 8px;
      }

      .dob-selects select {
        flex: 1;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 14px;
      }

      .gender-group {
        margin-bottom: 20px;
      }

      .gender-group label {
        font-size: 14px;
        font-weight: 600;
        display: block;
        margin-bottom: 8px;
      }

      .gender-options {
        display: flex;
        gap: 8px;
      }

      .gender-options label {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 8px;
        text-align: center;
        cursor: pointer;
        font-size: 14px;
      }

      .gender-options input {
        margin-left: 6px;
      }

      .btn-register {
        width: 100%;
        padding: 12px;
        background: #6b73ff;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      .btn-register:hover {
        background: #000dff;
      }

      .login-link {
        text-align: right;
        font-size: 14px;
        color: #6b73ff;
        text-decoration: none;
        display: block;
        margin-top: -15px;
        margin-bottom: 15px;
      }

      .login-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <form class="register-container" method="POST" action="/web-auth/register">
      <h2>Buat Akun Baru</h2>

      <input
        name="username"
        class="form-control"
        placeholder="Username"
        required
      />

      <input
        name="password"
        type="password"
        class="form-control"
        placeholder="Password"
        required
      />

      <input
        name="full_name"
        type="text"
        class="form-control"
        placeholder="Full name"
        required
      />

      <!-- DATE OF BIRTH -->
      <div class="dob-group">
        <label>Date of birth</label>
        <div class="dob-selects">
          <select name="day" required>
            <option value="">Day</option>
            <!-- 1-31 -->
            <script>
              for (let i = 1; i <= 31; i++) {
                document.write(`<option value="${i}">${i}</option>`);
              }
            </script>
          </select>

          <select name="month" required>
            <option value="">Month</option>
            <option value="01">Jan</option>
            <option value="02">Feb</option>
            <option value="03">Mar</option>
            <option value="04">Apr</option>
            <option value="05">May</option>
            <option value="06">Jun</option>
            <option value="07">Jul</option>
            <option value="08">Aug</option>
            <option value="09">Sep</option>
            <option value="10">Oct</option>
            <option value="11">Nov</option>
            <option value="12">Dec</option>
          </select>

          <select name="year" required>
            <option value="">Year</option>
            <script>
              const currentYear = new Date().getFullYear();
              for (let y = currentYear; y >= 1950; y--) {
                document.write(`<option value="${y}">${y}</option>`);
              }
            </script>
          </select>
        </div>
      </div>

      <!-- GENDER -->
      <div class="gender-group">
        <label>Gender</label>
        <div class="gender-options">
          <label>
            Female <input type="radio" name="gender" value="female" required />
          </label>

          <label>
            Male <input type="radio" name="gender" value="male" />
          </label>
        </div>
      </div>

      <a href="/auth/login" class="login-link"> Sudah punya akun? Login </a>

      <button type="submit" class="btn-register">Register</button>
    </form>
  </body>
</html>
