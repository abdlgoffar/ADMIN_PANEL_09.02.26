  </div>
</div>

<script>
  document.addEventListener("click", function (e) {
    if (e.target.classList.contains("preview-image")) {
      document.getElementById("lightboxImage").src = e.target.src;
      $('#lightboxModal').modal('show');
    }
  });


  document.getElementById('photoInput').addEventListener('change', function (e) {
    const file = e.target.files[0];
    if (file) {
      document.getElementById('profilePreview').src = URL.createObjectURL(file);
    }
  });


  function timeAgo(dateString) {
    const now = new Date();
    const past = new Date(dateString);
    const diff = Math.floor((now - past) / 1000);

    if (diff < 60) return diff + " detik lalu"; if (diff < 3600) return Math.floor(diff / 60) + " menit lalu"; if (diff <
      86400) return Math.floor(diff / 3600) + " jam lalu"; if (diff < 2592000) return Math.floor(diff / 86400)
        + " hari lalu"; if (diff < 31536000) return Math.floor(diff / 2592000) + " bulan lalu"; return Math.floor(diff /
          31536000) + " tahun lalu";
  } document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".time-ago").forEach(el => {
      el.innerText = timeAgo(el.dataset.time);
    });
  });

  const input = document.getElementById("postInput");
  const addBtn = document.getElementById("addBtn");
  const sendBtn = document.getElementById("sendBtn");

  function updateButtonState() {
    const isFocused = document.activeElement === input;
    const isLongEnough = input.value.length > 3;

    if (isFocused || isLongEnough) {
      addBtn.classList.add("d-none");
      sendBtn.classList.remove("d-none");
    } else {
      addBtn.classList.remove("d-none");
      sendBtn.classList.add("d-none");
    }
  }

  input.addEventListener("focus", updateButtonState);
  input.addEventListener("blur", updateButtonState);
  input.addEventListener("input", updateButtonState);



</script>



<script>
  const imageInput = document.getElementById("imageInput");
  const previewContainer = document.getElementById("previewContainer");
  const captionContainer = document.getElementById("captionContainer");

  // Buka modal
  document.getElementById("addBtn").addEventListener("click", function () {
    $("#uploadPostModal").modal("show");
  });

  imageInput.addEventListener("change", function () {

    previewContainer.innerHTML = "";

    const files = this.files;

    if (files.length > 0) {
      captionContainer.classList.remove("d-none"); // tampilkan caption

      Array.from(files).forEach(file => {

        if (!file.type.startsWith("image/")) return;

        const reader = new FileReader();

        reader.onload = function (e) {
          const col = document.createElement("div");
          col.className = "col-md-3 mb-3";

          col.innerHTML = `
            <div class="position-relative">
              <img src="${e.target.result}" 
                   class="img-fluid rounded shadow"
                   style="height:150px; object-fit:cover; width:100%;" />

              <button type="button"
                      class="btn btn-danger btn-sm position-absolute"
                      style="top:5px; right:5px;"
                      onclick="removeImage(this)">
                &times;
              </button>
            </div>
          `;

          previewContainer.appendChild(col);
        };

        reader.readAsDataURL(file);
      });

    } else {
      captionContainer.classList.add("d-none");
    }
  });

  function removeImage(button) {
    button.closest(".col-md-3").remove();

    if (previewContainer.children.length === 0) {
      captionContainer.classList.add("d-none");
      imageInput.value = "";
    }
  }

  const captionInput = document.getElementById("captionInput");
  const uploadBtn = document.getElementById("uploadBtn");

  function checkForm() {
    const hasImage = imageInput.files.length > 0;
    const hasCaption = captionInput.value.trim().length > 0;

    if (!hasImage && !hasCaption) {
      uploadBtn.disabled = true;
      uploadBtn.classList.add("btn-secondary");
      uploadBtn.classList.remove("btn-primary");
    } else {
      uploadBtn.disabled = false;
      uploadBtn.classList.add("btn-primary");
      uploadBtn.classList.remove("btn-secondary");
    }
  }

  imageInput.addEventListener("change", checkForm);
  captionInput.addEventListener("input", checkForm);

  document.addEventListener("DOMContentLoaded", checkForm);
</script>